{
  "name": "@web/test-runner-cli",
  "version": "0.5.9",
  "publishConfig": {
    "access": "public"
  },
  "description": "CLI for Web Test Runner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modernweb-dev/web.git",
    "directory": "packages/test-runner-cli"
  },
  "author": "modern-web",
  "homepage": "https://github.com/modernweb-dev/web/tree/master/packages/test-runner-cli",
  "main": "dist/index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "mocha \"test/**/*.test.ts\" --require ts-node/register --reporter dot",
    "test:watch": "mocha \"test/**/*.test.ts\" --require ts-node/register --watch --watch-files src,test --reporter dot"
  },
  "files": [
    "*.d.ts",
    "*.js",
    "*.mjs",
    "dist",
    "src"
  ],
  "keywords": [
    "web",
    "test",
    "runner",
    "testrunner",
    "terminal",
    "console",
    "CLI"
  ],
  "dependencies": {
    "@babel/code-frame": "^7.10.4",
    "@types/babel__code-frame": "^7.0.1",
    "@web/browser-logs": "^0.1.2",
    "@web/config-loader": "^0.1.1",
    "@web/test-runner-chrome": "^0.6.4",
    "@web/test-runner-core": "^0.7.11",
    "camelcase": "^6.0.0",
    "chalk": "^4.1.0",
    "cli-cursor": "^3.1.0",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "convert-source-map": "^1.7.0",
    "deepmerge": "^4.2.2",
    "diff": "^4.0.2",
    "globby": "^11.0.1",
    "ip": "^1.1.5",
    "istanbul-lib-report": "^3.0.0",
    "istanbul-reports": "^3.0.2",
    "log-update": "^4.0.0",
    "open": "^7.0.4",
    "portfinder": "^1.0.26",
    "source-map": "^0.7.3"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/convert-source-map": "^1.5.1",
    "@types/diff": "^4.0.2",
    "@types/globby": "^9.1.0",
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/istanbul-reports": "^1.1.2"
  },
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./dist/index.js"
    }
  }
}
