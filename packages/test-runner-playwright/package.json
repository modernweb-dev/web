{
  "name": "@web/test-runner-playwright",
  "version": "0.4.20",
  "publishConfig": {
    "access": "public"
  },
  "description": "Playwright browser launcher for Web Test Runner",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modernweb-dev/web.git",
    "directory": "packages/test-runner-playwright"
  },
  "author": "modern-web",
  "homepage": "https://github.com/modernweb-dev/web/tree/master/packages/test-runner-playwright",
  "main": "dist/index.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "mocha test/**/*.test.ts --require ts-node/register --reporter progress",
    "test:ci": "yarn test",
    "test:watch": "mocha test/**/*.test.ts --require ts-node/register --watch --watch-files src,test --reporter progress"
  },
  "files": ["dist"],
  "keywords": [
    "web",
    "test",
    "runner",
    "testrunner",
    "playwright",
    "browser",
    "launcher"
  ],
  "dependencies": {
    "@web/browser-logs": "^0.0.1",
    "@web/test-runner-core": "^0.6.22",
    "@web/test-runner-coverage-v8": "^0.0.4",
    "playwright": "^1.3.0"
  },
  "devDependencies": {
    "@web/test-runner-mocha": "^0.2.15",
    "@web/test-runner-server": "^0.5.15",
    "portfinder": "^1.0.26"
  }
}
