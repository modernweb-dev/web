{
  "name": "@web/test-runner",
  "version": "0.3.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Test runner for web applications",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modernweb-dev/web.git",
    "directory": "packages/test-runner"
  },
  "author": "modern-web",
  "homepage": "https://github.com/modernweb-dev/web/tree/master/packages/test-runner",
  "main": "dist/index.js",
  "bin": {
    "web-test-runner": "./dist/test-runner.js",
    "wtr": "./dist/test-runner.js"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "node dist/test-runner.js --preserve-symlinks --root-dir ../.. demo/**/pass-*.test.js",
    "test:many": "node dist/test-runner.js --root-dir ../.. demo/test/many/**/*.test.js",
    "test:mixed": "node dist/test-runner.js --preserve-symlinks --root-dir ../.. demo/**/*.test.js",
    "test:playwright": "node dist/test-runner.js --preserve-symlinks --root-dir ../.. demo/**/*.test.js --playwright --browsers chromium firefox webkit",
    "test:watch": "node dist/test-runner.js --root-dir ../.. demo/**/pass-*.test.js --watch"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "web",
    "test",
    "runner",
    "testrunner",
    "default",
    "implementation",
    "cli"
  ],
  "dependencies": {
    "@web/test-runner-chrome": "^0.2.2",
    "@web/test-runner-cli": "^0.2.0",
    "@web/test-runner-core": "^0.3.0",
    "@web/test-runner-dev-server": "^0.3.0",
    "@web/test-runner-mocha": "^0.1.2",
    "command-line-args": "^5.1.1"
  }
}
