{
  "name": "@web/test-runner-core",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Modern web test runner: core",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modernweb-dev/web.git",
    "directory": "packages/test-runner-core"
  },
  "author": "modern-web",
