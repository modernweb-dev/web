{
  "name": "@web/test-runner-core",
  "version": "0.7.16",
  "publishConfig": {
    "access": "public"
  },
  "description": "Web test runner core",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modernweb-dev/web.git",
    "directory": "packages/test-runner-core"
  },
  "author": "modern-web",
  "homepage": "https://github.com/modernweb-dev/web/tree/master/packages/test-runner-core",
  "main": "./dist/index.js",
  "module": "./index.mjs",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "mocha test/**/*.test.ts --require ts-node/register --reporter dot",
    "test:watch": "mocha test/**/*.test.ts --require ts-node/register --watch --watch-files src,test --reporter dot"
  },
  "files": [
    "*.d.ts",
    "*.js",
    "*.mjs",
    "browser",
    "dist",
    "src"
  ],
  "keywords": [
    "web",
    "test",
    "runner",
    "testrunner",
    "core"
  ],
  "dependencies": {
    "@babel/code-frame": "^7.10.4",
    "@web/browser-logs": "^0.1.3",
    "@web/dev-server-core": "^0.2.9",
    "co-body": "^6.0.0",
    "debounce": "^1.2.0",
    "dependency-graph": "^0.9.0",
    "istanbul-lib-coverage": "^3.0.0",
    "picomatch": "^2.2.2",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/co-body": "^5.1.0",
    "@types/istanbul-lib-coverage": "^2.0.2",
    "@types/sinon-chai": "^3.2.4",
    "@types/uuid": "^8.0.0",
    "portfinder": "^1.0.28",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0"
  },
  "exports": {
    ".": {
      "import": "./index.mjs",
      "require": "./dist/index.js"
    },
    "./test-helpers": {
      "import": "./test-helpers.mjs",
      "require": "./dist/test-helpers.js"
    },
    "./browser/session.js": "./browser/session.js"
  }
}
