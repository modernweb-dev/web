{
  "name": "@web/root",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": " concurrently \"yarn build:node\" \"yarn build:browser\"",
    "build:browser": "concurrently \"yarn workspace @web/test-runner-browser-lib build\" \"yarn workspace @web/test-runner-mocha build\" -m 1",
    "build:node": "tsc --build packages/tsconfig.project.json",
    "build:node:watch": "tsc --build --watch packages/tsconfig.project.json",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .ts,.js . --fix",
    "format:prettier": "prettier \"**/*.{ts,js,md}\" \"**/package.json\" --write --ignore-path .eslintignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .ts,.js .",
    "lint:prettier": "prettier \"**/*.{ts,js,md}\" \"**/package.json\" --check --ignore-path .eslintignore",
    "reinstall-workspace": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf demo/projects/*/node_modules && rm -rf packages/*/dist && rm -rf packages/*/tsconfig.tsbuildinfo && yarn install && yarn build",
    "test": "yarn workspaces run test:ci",
    "update-dependency": "node scripts/update-dependency.js",
    "update:tsconfig": "ts-node scripts/update-package-tsconfig.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.8.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-typescript": "^5.0.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/parse5": "^5.0.3",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "mocha": "^7.2.0",
    "prettier": "^2.0.4",
    "prettier-plugin-package": "^1.0.0",
    "rollup": "^2.20.0",
    "rollup-plugin-terser": "^6.1.0",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "eslint-config-prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write --ignore-path .eslintignore",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "trailingComma": "all"
  },
  "workspaces": [
    "packages/*",
    "demo/projects/*"
  ]
}
